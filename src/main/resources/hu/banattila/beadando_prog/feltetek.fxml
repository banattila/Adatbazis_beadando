    </TableView>
    <AnchorPane layoutX="481.0" prefHeight="601.0" prefWidth="542.0" style="-fx-background-color: antiquewhite;">
        <Button fx:id="deleteFeltet" layoutX="77.0" layoutY="33.0" mnemonicParsing="false"
                text="Kijelölt elem törlése">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Label layoutX="173.0" layoutY="97.0" text="Ár frissítése megnezeés alapján">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <TextField fx:id="updateFeltetMegnezes" layoutX="236.0" layoutY="135.0" promptText="Megnevezés"/>
        <TextField fx:id="updateFeltetAr" layoutX="236.0" layoutY="175.0" promptText="Ár"/>
        <Button fx:id="updateFeltet" layoutX="279.0" layoutY="218.0" mnemonicParsing="false" text="Frissít">

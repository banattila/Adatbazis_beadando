        <Button fx:id="searchFeltetBtn" layoutX="366.0" layoutY="313.0" mnemonicParsing="false" text="Keres">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <TextField fx:id="searchResutlAr" layoutX="334.0" layoutY="365.0" promptText="Ár"/>

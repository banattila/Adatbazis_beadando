            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button fx:id="addFeltet" layoutX="276.0" layoutY="547.0" mnemonicParsing="false" text="Hozzáad">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <TextField fx:id="addFeltetMegnevezes" layoutX="255.0" layoutY="455.0" promptText="Megnevezés"/>
        <TextField fx:id="addFeltetAr" layoutX="247.0" layoutY="494.0" promptText="Ár"/>

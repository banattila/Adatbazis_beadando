        <Label layoutX="96.0" layoutY="25.0" text="Feltétek árának emelése 10%-al.">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Button fx:id="incArBtn" layoutX="544.0" layoutY="18.0" mnemonicParsing="false" text="Emel">
            <font>
